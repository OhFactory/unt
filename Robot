public class Robot{

private Vector3 TargetPosition;
//private Vector3 TargetAngle;//Foward
private float Distance;

[SerializeField]
private Transform Target;

[SerializeField]
private Transform Bone_Horizon1;
[SerializeField]
private Transform Bone_Horizon2;
[SerializeField]
private Transform Bone_Vertical1;
[SerializeField]
private Transform Bone_Vertical2;
[SerializeField]
private Transform Bone_Hand;


void Update(){
  TargetPosition=Target.position+Target.rotation.EulerAngle.nomalized*Distance;

}

}
